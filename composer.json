{
    "name": "visol/typo3-handlebars",
    "description": "This is a TYPO3 CMS extension to render native handlebars templates",
    "type": "typo3-cms-extension",
    "homepage": "https://www.visol.ch",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Visol\\Handlebars\\": "Classes/"
        }
    },
    "require": {
        "php": ">= 8.0 < 8.4",
        "zordius/lightncandy": "^1.2",
        "typo3/cms-core": "^13.4",
        "typo3/cms-extbase": "^13.4",
        "typo3fluid/fluid": "^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "handlebars"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    }
}
